<div class="col-md-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Messages</h3>
      <span class="pull-right">
        <ul class="nav panel-tabs">
          <li><a href="#tab1" data-toggle="tab">Sent Messages</a></li>
          <li><a href="#tab2" data-toggle="tab">Received Messages</a>
          </li>
        </ul>
      </span>
    </div>
    <div class="panel-body">
      <div class="tab-content">
        <div class="tab-pane" id="tab1">
          <table class="table">
            <tr><th> sr no </th>
              <th> message:</th>
            </tr> 
          <% @send_messages.each_with_index do |message, index| %>
            <tr>
              <td><%= index = "#{index+1}" %></td>
              <td><%= message.body%></td>
            </tr>
          <% end %>
          </table>
        </div>
        
        <div class="tab-pane" id="tab2">
         <table class="table">
          <tr>
            <td>sr no</td>
            <td>message:</td>
          </td>
          <% @receive_messages.each_with_index do |message, index| %>
            <%# find_member(message) %>
            <tr>
              <td><%= index = "#{index+1}" %></td>
              <td><%= message.body%></td>
            </tr>
          <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


