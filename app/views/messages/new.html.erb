<div class="col-md-4 col-md-offset-3">
  <div class="well">
    <table>
      <tr>
        <td><th>New Message:</th></td>
      </tr>
    </table>
    <%= form_for  @message do |f| %>
      <div class="form-group">
        <%= f.text_area :body, placeholder: "Text Message" %>
      </div>
      <div class="form-group">
       <%= f.hidden_field :receiver_id, :value => params[:receiver_id].to_i %>
      </div>
      <div class = "col-md-offset-3">
        <div class="form-group">
          <%= f.submit "Submit", class: "btn btn-primary btn-sm"%>
        </div>
      </div>    
    <%end%>
  </div>
</div>