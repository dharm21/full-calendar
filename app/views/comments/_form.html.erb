<div id="@comment.post">
  <%= form_for [@post,  @post.comments.new], :html => { :multipart => true }, remote: true do |f| %>
    <%= f.label      :upload_image %>
    <%= f.file_field :image %>
    
    <%= f.label      :comment%>
    <%= f.text_field :content%> 
    
    <%= f.submit "Submit", class: "btn btn-primary btn-sm"%>
  <%end%>
</div>

     