<% if @like.likeable_type == "Post" %>
	<% if @like.like == true %>
		$("#like-post-<%= @post.id %>").html("<%= j link_to "unlike(#{@post.likes.where(like: true).count})", like_path(@post.id, 'post_id': @post.id), method: :delete, remote: true %>");
		$("#dislike-post-<%= @post.id%>").html("<%= j link_to "dislike(#{@post.likes.where(like: false).count})", likes_path('post_id': @post.id, 'like': false), method: :post, remote:  true%>");
	<% else %>
		$("#like-post-<%= @post.id%>").html("<%= j link_to "like(#{@post.likes.where(like: true).count})", likes_path('post_id': @post.id, 'like': true), method: :post, remote:  true%>");
		$("#dislike-post-<%= @post.id %>").html("<%= j link_to "dislike(#{@post.likes.where(like: false).count})", like_path(@post.id, 'post_id': @post.id), method: :delete, remote: true %>");
	<% end %>
